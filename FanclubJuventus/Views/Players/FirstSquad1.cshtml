@model IEnumerable<FanclubJuventus.Models.FirstSquad>
@{
    ViewBag.Title = "FirstSquad1";
}
<br /><br />
<h2>..:: This is Our The Best First Squad ::..</h2>

<table class="table">
    <tr>
        <th>
            @Html.Label("Image")
        </th>
        
        <th>
            @Html.Label("First Name")
        </th>
        <th>
            @Html.Label("Last Name")
        </th>
        <th>
            @Html.Label("Number")
        </th>
        <th>
            @Html.Label("Age")
        </th>
        <th>
            @Html.Label("Country")
        </th>
        <th>
           @Html.Label("Position")
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="~/Images/@item.Image" alt="" height="50px" width="50px" />
                <input type="hidden" name="Image" value="@item.Image" />
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.position)
            </td>
@if (Context.User.IsInRole("Admin"))
{
            <td>
               <button class="btn-danger"> @Html.ActionLink("Delete", "DeleteSquad", new { id = item.ID })</button>
            </td>
}
        </tr>
    }
    </table>
