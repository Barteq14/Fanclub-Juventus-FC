@model IEnumerable<FanclubJuventus.Models.DeliveryOption>

@{
    ViewBag.Title = "ChooseDelivery";
}
<br /><br />
<h2>ChooseDelivery</h2>

<br />
<br />
<br />

<center>
        <table class="table" style="width:50%">


            @foreach (var item in Model)
            {
                <tr>
                    <td rowspan="2">
                        <img src="~/Images/@item.Image" alt="" height="150px" width="40%" />
                        <input type="hidden" name="Image" value="@item.Image" />
                    </td>
     
                    <td style="text-align:center">
                       <h3> @Html.DisplayFor(modelItem => item.Name)  </h3>
                        @Html.DisplayFor(modelItem => item.KindOfDelivery.Name) @Html.DisplayFor(modelItem => item.KindOfDelivery.PriceForDelivery)  zł
                   &nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <button>  @Html.ActionLink("Choose", "SelectDelivery", "Basket", new { id = item.ID }, null) </button>
                    </td>
  
                </tr>

                <tr></tr>


            }

        </table>
   </center>     
