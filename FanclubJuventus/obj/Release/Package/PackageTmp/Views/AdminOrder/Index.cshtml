@model IEnumerable<FanclubJuventus.Models.Basket>
@{
    ViewBag.Title = "Bought_P";
}
<br /><br />
<p>
    <h2>USER'S ORDER</h2>
</p>
<br />
<br />
<br />
<br />
<br />
<table class="table">
    <tr style="background-color:burlywood">

        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOrder)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status.Name)
        </th>




        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Name)
            </td>
            @if (item.Status.Name.Equals("Expectant"))
            {
            <td>
                @Html.ActionLink("Accept", "Accept", "AdminOrder", new { id = item.ID }, null)
            </td>
            }


        </tr>

    }


</table>

                    
                



